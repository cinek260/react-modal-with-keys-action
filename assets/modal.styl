@import './globals.styl'
.react-modal-with-keys-action-background
    background rgba(primary, .7)
    width 100%
    height 100%
    position fixed
    z-index 99999
    top 0
    left 0
    display none
    overflow scroll
    .react-modal-with-keys-action-wrapper
        position relative
        display table-cell
        vertical-align middle
        width 100%
        padding 100px 0
        overflow-y auto
        .react-modal-with-keys-action
            position relative
            width 90%
            padding 25px 25px
            background #fff
            margin 0 auto
            img
              max-width 100%
              max-height 300px
            .react-modal-with-keys-action-close
                position absolute
                cursor pointer
                right 30px
                top -60px
                div.react-modal-with-keys-action-x
                    position absolute
                    width 30px
                    height 30px
                    border-top 3px solid white
                    border-left 3px solid white
                    &:first-child
                        transform rotate(225deg)
                        top -19px
                    &:last-child
                        transform rotate(45deg)
                        top 19px

            h3
                color gray-five
                margin 0
                font-size 20px
                font-weight 700
                margin-bottom 12px
                width 100%
            p
                word-wrap: break-word
                font-weight 300
                font-size 15px
                width 100%
                strong
                    font-weight 400

.active.react-modal-with-keys-action-background
    display flex
    justify-content center
@media only screen and (min-width: 48em)
    .react-modal-with-keys-action-background
        .react-modal-with-keys-action-wrapper
            .react-modal-with-keys-action
                width 50%
                padding 25px 50px
                .react-modal-with-keys-action-close
                    right -20px
                    top -60px
